<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.mapper.QfMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qf.domain.QfMenu">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="icon" property="icon" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="parent_id" property="parentId" />
        <result column="order_num" property="orderNum" />
        <result column="del_status" property="delStatus" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, icon, path, component, parent_id, order_num, del_status, create_time, update_time, create_by, update_by
    </sql>

    <select id="listMenu" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from qf_menu m ${ew.customSqlSegment}
    </select>

    <select id="listPage" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from qf_menu m ${ew.customSqlSegment}
    </select>

    <select id="selectByroleId" resultMap="BaseResultMap">
        select m.id, m.name, m.icon, m.path, m.component, m.parent_id, m.order_num, m.del_status, m.create_time, m.update_time, m.create_by, m.update_by
        from qf_menu m left join qf_role_menu rm
            on m.id = rm.menu_id
        where rm.role_id = #{roleId}
    </select>

    <select id="selectByParentId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from qf_menu m where m.delStatus=1 and m.id = #{pid,jdbcType=BIGINT}
    </select>

</mapper>
